<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/cf460b03fe8f440099f4ea7b3f717560"
    tools:context="com.example.groccerystore_3.CommentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/titleCommentTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Описание продукта:"
            android:textSize="26sp"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/productNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Название"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <TextView
        android:id="@+id/productPriceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Цена"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/productNameTV" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/productImageIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="32dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/productPriceTV"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/commentProductTV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:hint="Описание продукта:"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/productImageIV"
        tools:layout_editor_absoluteX="148dp" />
</androidx.constraintlayout.widget.ConstraintLayout>